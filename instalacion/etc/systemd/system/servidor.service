[Unit]
Description=Manage Java service

[Service]
WorkingDirectory=/opt/GARV/Servidor
ExecStart=/bin/java -Xms128m -Xmx256m -jar servidor.jar
User=jvmapps
Type=simple
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
