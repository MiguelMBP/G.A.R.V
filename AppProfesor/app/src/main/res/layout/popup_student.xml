<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Añadir Alumno"
        android:id="@+id/popupTitleID"
        android:textSize="20dp"
        android:paddingBottom="20dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/popupTitleID"
        android:id="@+id/popupStudentName"
        android:hint="Nombre del Alumno">

    </EditText>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/popupStudentName"
        android:id="@+id/popupStudentLastName"
        android:hint="Apellidos del Alumno">

    </EditText>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/popupStudentLastName"
        android:id="@+id/popupStudentID"
        android:hint="DNI del Alumno">

    </EditText>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/popupStudentID"
        android:id="@+id/popupStudentGrade"
        android:hint="Curso del Alumno">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/empresaText"
        android:layout_below="@id/popupStudentGrade"
        android:text="Empresa"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/empresaText"
        android:id="@+id/spinnerCompany"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:layout_marginRight="4dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerCompany"
        android:id="@+id/popupCreateCompanyButton"
        android:text="Añadir Empresa"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popupCreateCompanyButton"
        android:id="@+id/popupSavePlayerButton"
        android:text="Añadir Alumno"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"/>


</RelativeLayout>